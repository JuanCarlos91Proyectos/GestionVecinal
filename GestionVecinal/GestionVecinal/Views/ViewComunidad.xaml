<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionVecinal.Views.ViewComunidad"
             Title="{Binding Comunidad.Direccion}"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
             HeightRequest="800">
    <TabbedPage.Children>
        <ContentPage Title="{Binding AppSettings.Labels.ViewComunidadLabels.Comunidad}" HeightRequest="800" >
            <StackLayout Padding="30,0">
                <Label Text="Dirección" 
                       Style="{StaticResource label}"/>
                <Entry Text="{Binding Comunidad.Direccion}" 
                       Style="{StaticResource entry}"
                       IsReadOnly="True"/>
                <Label Text="Código postal" 
                       Style="{StaticResource label}"/>
                <Entry Text="{Binding Comunidad.Cp}" 
                       Style="{StaticResource entry}"
                       IsReadOnly="True"/>
                <Label Text="Población" 
                       Style="{StaticResource label}"/>
                <Entry Text="{Binding Comunidad.Poblacion}" 
                       Style="{StaticResource entry}"
                       IsReadOnly="True"/>
                <Label Text="Provincia" 
                       Style="{StaticResource label}"/>
                <Entry Text="{Binding Comunidad.Provincia}" 
                       Style="{StaticResource entry}"
                       IsReadOnly="True"/>
                <Label Text="Número de viviendas" 
                       Style="{StaticResource label}"/>
                <Entry Text="{Binding Comunidad.NumeroViviendas}" 
                       Style="{StaticResource entry}"
                       IsReadOnly="True"/>
                <Label Text="Cuota de la comunidad" 
                       Style="{StaticResource label}"/>
                <Entry Text="{Binding Comunidad.Cuota}" 
                       Style="{StaticResource entry}"
                       Keyboard="Numeric"/>
                <Button Text="Editar comunidad" 
                        Style="{StaticResource button}"/>
            </StackLayout>
        </ContentPage>

        <ContentPage Title="{Binding AppSettings.Labels.ViewComunidadLabels.Miembros}">
            <CollectionView ItemsSource="{Binding Miembros}" HeightRequest="-1" Margin="10,0,0,0" HorizontalScrollBarVisibility="Default" ItemsLayout="VerticalList">
                <CollectionView.Header >
                    <Grid ColumnDefinitions="50,50,*,*,*,*,*,*,*,Auto,Auto">
                        <Label Text=" " Grid.Column="0" TextColor="{StaticResource PrimaryPlus}"/>
                        <Label Text=" " Grid.Column="1" TextColor="{StaticResource PrimaryPlus}"/>
                        <Label Text="Nombre" Grid.Column="2" HorizontalTextAlignment="Center" TextColor="{StaticResource PrimaryPlus}"/>
                        <Label Text="Apellidos" Grid.Column="3" HorizontalTextAlignment="Center" TextColor="{StaticResource PrimaryPlus}"/>
                        <Label Text="Piso" Grid.Column="4" HorizontalTextAlignment="Center" TextColor="{StaticResource PrimaryPlus}"/>
                        <Label Text="Puerta" Grid.Column="5" HorizontalTextAlignment="Center" TextColor="{StaticResource PrimaryPlus}"/>
                        <Label Text="Telefono" Grid.Column="6" HorizontalTextAlignment="Center" TextColor="{StaticResource PrimaryPlus}"/>
                        <Label Text="Email" Grid.Column="7" HorizontalTextAlignment="Center" TextColor="{StaticResource PrimaryPlus}"/>
                        <Label Text="FormaPago Cuota" Grid.Column="8" HorizontalTextAlignment="Center" TextColor="{StaticResource PrimaryPlus}"/>
                    </Grid>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="{StaticResource TertiaryBrush}" 
                                StrokeThickness="4" 
                                StrokeShape="RoundRectangle 40,0,0,40"
                                Background="Transparent"
                                Padding="16,8"
                                HorizontalOptions="Center">         
                            <Grid ColumnDefinitions="50,50,*,*,*,*,*,*,*,Auto,Auto">
                            <!--<Label IsVisible="{Binding Moroso}" Text="Moroso" Grid.Column="0" HorizontalTextAlignment="Center" TextColor="Red"/>-->
                            
                                <mi:MauiIcon IsVisible="{Binding Moroso}" Icon="{mi:Fluent ErrorCircle20}" OnPlatforms="WinUI" Grid.Column="1" IconColor="Red" ToolTipProperties.Text="Miembro en estado de morosidad" WidthRequest="50"/>
                                <mi:MauiIcon IsVisible="{Binding EsPresidente}" Icon="{mi:Fluent Star20}" OnPlatforms="WinUI" Grid.Column="0" IconColor="Gold" ToolTipProperties.Text="Presidente" WidthRequest="50"/>
                                <Label Text="{Binding Nombre}" Grid.Column="2" HorizontalTextAlignment="Center" TextColor="{StaticResource PrimaryPlus}"/>
                                <Label Text="{Binding Apellidos}" Grid.Column="3" HorizontalTextAlignment="Center" TextColor="{StaticResource PrimaryPlus}"/>
                                <Label Text="{Binding Piso}" Grid.Column="4" HorizontalTextAlignment="Center" TextColor="{StaticResource PrimaryPlus}"/>
                                <Label Text="{Binding Puerta}" Grid.Column="5" HorizontalTextAlignment="Center" TextColor="{StaticResource PrimaryPlus}"/>
                                <Label Text="{Binding Telefono}" Grid.Column="6" HorizontalTextAlignment="Center" TextColor="{StaticResource PrimaryPlus}"/>
                                <Label Text="{Binding Email}" Grid.Column="7" HorizontalTextAlignment="Center" TextColor="{StaticResource PrimaryPlus}"/>
                                <Label Text="{Binding FormaPago}" Grid.Column="8" HorizontalTextAlignment="Center" TextColor="{StaticResource PrimaryPlus}"/>
                            
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ContentPage>

        <ContentPage Title="{Binding AppSettings.Labels.ViewComunidadLabels.Presidentes}">
            <StackLayout>
                <Label Text="Gestión de Facturas" />
                <!-- Aquí puedes agregar controles para gestionar la entidad Factura -->
            </StackLayout>
        </ContentPage>

        <ContentPage Title="{Binding AppSettings.Labels.ViewComunidadLabels.Derramas}">
            <StackLayout>
                <Label Text="Gestión de Derramas" />
                <!-- Aquí puedes agregar controles para gestionar la entidad Derrama -->
            </StackLayout>
        </ContentPage>

        <ContentPage Title="{Binding AppSettings.Labels.ViewComunidadLabels.Proveedores}">
            <StackLayout>
                <Label Text="Gestión de Facturas" />
                <!-- Aquí puedes agregar controles para gestionar la entidad Factura -->
            </StackLayout>
        </ContentPage>

        <ContentPage Title="{Binding AppSettings.Labels.ViewComunidadLabels.Facturas}">
            <StackLayout>
                <Label Text="Gestión de Facturas" />
                <!-- Aquí puedes agregar controles para gestionar la entidad Factura -->
            </StackLayout>
        </ContentPage>

        <ContentPage Title="{Binding AppSettings.Labels.ViewComunidadLabels.Juntas}">
            <StackLayout>
                <Label Text="Gestión de Facturas" />
                <!-- Aquí puedes agregar controles para gestionar la entidad Factura -->
            </StackLayout>
        </ContentPage>

        <ContentPage Title="{Binding AppSettings.Labels.ViewComunidadLabels.Incidencias}">
            <StackLayout>
                <Label Text="Gestión de Facturas" />
                <!-- Aquí puedes agregar controles para gestionar la entidad Factura -->
            </StackLayout>
        </ContentPage>



        <!-- Repite para las demás entidades (Incidencia, Junta, Miembro, Pago, Presidencia, Proveedor) -->

    </TabbedPage.Children>
</TabbedPage>